{
  "compilerOptions": {
    "target": "ES2017",
    "baseUrl": ".",
    
    "paths": {
      "@/icons/*": [
        "components/icons/*"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/config/*": [
        "config/*"
      ],
      "@/lib/*": [
        "lib/*"
      ],
      "@/screens/*": [
        "screens/*"
      ],
      "@/public/*": [
        "public/*"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ],
      "@/server/*": [
        "server/*"
      ],
      "@/utils/*": [
        "utils/*"
      ],
      
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "pages/_app.js", "components/Search-form/index.js", "pages/restaurant/[name]/menu/[item]/index.js"  ]
}
